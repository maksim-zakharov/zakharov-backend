    "baseUrl": "./",
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "rootDir": "./",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  }
}
