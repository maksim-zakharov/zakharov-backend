{
  "name": "zakharov-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"test/**/*.ts\\\"",
    "yc:start": "sls offline start",
    "yc:createfunc": "yc serverless function create --name=zakharov-backend",
    "yc:build": "sls deploy -v",
    "yc:deployS3": "aws --endpoint-url=https://storage.yandexcloud.net s3 cp .serverless/build.zip s3://zakharov-backend-build/build.zip",
    "yc:moveS3": "yc serverless function version create --function-name=zakharov-backend --runtime nodejs14 --entrypoint src/lambda.handler --memory 128m --execution-timeout 3s --package-bucket-name zakharov-backend-build --package-object-name build.zip",
    "yc:deploy": "npm run yc:build && npm run yc:deployS3 && npm run yc:moveS3",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config server/src/ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./server/src/ormconfig.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/typeorm": "^7.1.5",
    "aws-lambda": "^1.0.6",
    "aws-serverless-express": "^3.4.0",
    "express": "^4.17.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "serverless-offline": "^6.8.0",
    "typeorm": "^0.2.31",
    "ydb-sdk": "^1.8.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.4.2",
    "prettier": "^1.19.1",
    "serverless-plugin-optimize": "^4.2.1-rc.1",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-plugin-warmup": "^5.2.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
